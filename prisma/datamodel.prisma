type User {
  id: ID! @id
  password: String!
  name: String!
  email: String! @unique
  recipeLists: [RecipeList!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Recipe {
  id: ID! @id
  label: String!
  uri: String! @unique
  image: String!
  servings: Int!
  calories: Float!
  totalWeight: Float!
  healthLabels: [healthLabel!]
  dietLabels: [dietLabel!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type RecipeList {
  id: ID! @id
  name: String!
  recipes: [Recipe!]
  user: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type healthLabel {
    id: ID! @id
    label: String! @unique
}

type dietLabel {
    id: ID! @id
    label: String! @unique
}
